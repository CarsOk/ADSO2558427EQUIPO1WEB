<%= simple_form_for [@seccion, @producto] do |f| %>
    <div class="form-group">
      <%= f.label :nombre %>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :precio %>
      <%= f.number_field :precio, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Guardar", class: "btn btn-primary" %>
    </div>
<% end %>
  