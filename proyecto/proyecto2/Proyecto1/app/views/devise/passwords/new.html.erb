<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

            <h2 class="font-bold">Forgot password</h2>

            <p>
            Ingresa tu correo electronico para poder hacer el cambio de contraseña
            </p>

            <div class="row">

              <div class="col-lg-12">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email" %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Send me reset password instructions", class:"btn btn-primary block full-width m-b" %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
              </div>
          </div>
        </div>
    </div>
</div>
<hr/>
<div class="row text-white">
    <div class="col-md-6">
        Copyright ©
    </div>
    <div class="col-md-6 text-right">
        <small>2022-2023</small>
    </div>
</div>
</div>