<div class="middle-box text-center loginscreen   animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">INC+</h1>
        </div>
        <h3 class="text-white">Registrate en GuamoINC+</h3>
        <p class="text-white">Create account to see it in action.</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" , class:"form-control", placeholder:"Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Confirmar Password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" , class:"btn btn-primary block full-width m-b" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>