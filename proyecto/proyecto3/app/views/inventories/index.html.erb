  <h1>Inventories</h1>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
            <thead>
              <tr>
                <th>Nombre del producto</th>
                <th data-hide="phone">Cantidad</th>
                <th data-hide="phone">Creado</th>
                <th data-hide="phone,tablet">Actualizado</th>
                <th class="text-right">Accion</th>
              </tr>
            </thead>
            <tbody>
              <% @inventories.each do |inventory| %>
                <tr>
                  <td><%= inventory.product.title %></td>
                  <td><%= inventory.quantity %></td>
                  <td><%= inventory.created_at %></td>
                  <td><%= inventory.updated_at %></td>
                  <td class="text-right">
                    <div class="btn-group">
                      <%= link_to 'View', inventory, class: 'btn-white btn btn-xs' %>
                      <%= link_to 'Edit', edit_inventory_path(inventory), class: 'btn-white btn btn-xs' %>
                      <%= link_to 'Delete', inventory, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn-white btn btn-xs' %>
                    </div>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

  <%= link_to "New Inventory", new_inventory_path, class: "btn btn-primary" %>

