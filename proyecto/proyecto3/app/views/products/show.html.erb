<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox product-detail">
        <div class="ibox-content">
          <div class="row">
            <div class="col-md-5">
              <div class="product-images">
                <div>
                  <div class="image-imitation" style="padding: 0">
                    <%= image_tag @product.image.url, class: "img-fluid rounded" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-7">
              <h2 class="font-bold m-b-xs">
                <%= @product.title %>
              </h2>
              <div class="m-t-md">
                <h2 class="product-main-price">$<%= @product.price %> </h2>
              </div>
              <hr>
              <h4>Product description</h4>
              <div class="small text-muted">
                <%= @product.description %>
              </div>
              <div class="small text-muted">
                <% if @product.available %>
                  <p class="text-success">Available: Yes</p>
                <% else %>
                  <p class="text-danger">Available: No</p>
                <% end %>
              </div>
              <hr>
              <div>
                <div class="btn-group">
                  <button class="btn btn-primary btn-sm">
                    <i class="fa fa-edit"></i>
                    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
                  </button>
                  <button class="btn btn-white btn-sm">
                    <i class="fa fa-star"></i>
                    <%= link_to 'Back', products_path, class: "btn btn-secondary" %>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
