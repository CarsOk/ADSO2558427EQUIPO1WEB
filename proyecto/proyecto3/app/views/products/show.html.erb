<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <% if @product.image? %>
        <%= image_tag @product.image.url, class: "img-fluid rounded" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1><%= @product.title %></h1>
      <p class="lead">Price: $<%= @product.price %></p>
      
      <% if @product.available %>
        <p class="text-success">Available: Yes</p>
      <% else %>
        <p class="text-danger">Available: No</p>
      <% end %>
      
      <p><strong>Description:</strong></p>
      <p><%= @product.description %></p>
      
      <div class="mt-3">
        <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
        <%= link_to 'Back', products_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
