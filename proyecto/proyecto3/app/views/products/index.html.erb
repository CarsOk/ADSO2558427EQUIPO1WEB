<% if notice || alert %>
  <div id="Notification" class="alert-dismissible custom-alert">
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
    <p id="notice"><%= notice || alert %></p>
  </div>
<% end %>

<h1 class="custom-header">Productos</h1>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox">
              <div class="ibox-content">

                  <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                      <thead>
                      <tr>
                          <th data-hide="phone">Title</th>
                          <th data-hide="phone">Price</th>
                          <th data-hide="phone">Available</th>
                          <th class="text-right">Accion</th>

                      </tr>
                      </thead>
                      <tbody>
                        <% @products.each do |product| %>
                          <tr>
                              <td><%= product.title %></td>
                              <td><%= number_to_currency(product.price) %></td>
                              <td>
                                <% if product.available == true %>
                                  <span class="badge badge-success">Disponible</span>
                                <% else %>
                                  <span class="badge badge-danger">No Disponible</span>
                                <% end %>
                              </td>        
                              <td class="text-right">
                                  <div class="btn-group">
                                    <%= link_to 'View', product, class: 'btn-white btn btn-xs' %>
                                    <%= link_to 'Edit', edit_product_path(product), class: 'btn-white btn btn-xs' %>
                                    <%= link_to 'Delete', product, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn-white btn btn-xs' %>
                                  </div>
                              </td>
                          </tr>
                        <%end%>
                      </tbody>
                      <tfoot>
                      <tr>
                          <td colspan="7">
                              <ul class="pagination float-right"></ul>
                          </td>
                      </tr>
                      </tfoot>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>
<% content_for :javascript do %>

<script type="text/javascript">


$(function () {

    $('.footable').footable();

});

</script>

<% end %>