<div id="Notification" class="alert alert-info alert-dismissible custom-alert">
  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
  <p id="notice"><%= notice %></p>
</div>

<h1 class="custom-header">Productos</h1>

<table class="table table-bordered custom-table">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Disponibilidad</th>
      <th class="text-center">Ver</th>
      <th class="text-center">Editar</th>
      <th class="text-center">Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>Disponible</td>
        <td class="col-md-1 text-center"><%= link_to content_tag(:i, '', class: 'fa fa-eye'), product, class: 'btn btn-primary' %></td>
        <td class="col-md-1 text-center"><%= link_to content_tag(:i, '', class: 'fal fa-edit'), edit_product_path(product), class: 'btn btn-success' %></td>
        <td class="col-md-1 text-center"><%= link_to content_tag(:i, '', class: 'fa fa-trash'), product, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


