<% if notice || alert %>
  <div id="Notification" class="alert-dismissible custom-alert">
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
    <p id="notice"><%= notice || alert %></p>
  </div>
<% end %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Productos</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= url_for :controller => 'sessions', :action => 'index' %>">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Productos</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox">
              <div class="ibox-content">

                  <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                      <thead>
                      <tr>
                          <th data-hide="phone">Title</th>
                          <th data-hide="phone">Price</th>
                          <th data-hide="phone">Available</th>
                          <th class="text-right">Accion</th>

                      </tr>
                      </thead>
                      <tbody>
                        <% @products.each do |product| %>
                          <tr>
                              <td><%= product.title %></td>
                              <td><%= number_to_currency(product.price) %></td>
                              <td>
                                <% if product.available == true && product.inventory_quantity.to_i > 0 %>
                                  <span class="badge badge-success">Disponible</span>
                                <% else %>
                                  <span class="badge badge-danger">No Disponible</span>
                                <% end %>
                              </td> 
                              <td class="text-right">
                                  <div class="btn-group">
                                    <%= link_to 'View', product, class: 'btn-white btn btn-xs' %>
                                    <%= link_to 'Edit', edit_product_path(product), class: 'btn-white btn btn-xs' %>
                                    <%= link_to 'Delete', product, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn-white btn btn-xs' %>
                                  </div>
                              </td>
                          </tr>
                        <%end%>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
  <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
<br><br>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function () {

    $('.footable').footable();

});

</script>

<% end %>